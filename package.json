{
  "name": "drive-mode-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "cd apps/server && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "lint": "concurrently \"npm run lint:server\" \"npm run lint:web\"",
    "lint:server": "cd apps/server && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "typecheck": "concurrently \"npm run typecheck:server\" \"npm run typecheck:web\"",
    "typecheck:server": "cd apps/server && npm run typecheck",
    "typecheck:web": "cd apps/web && npm run typecheck",
    "test": "concurrently \"npm run test:server\" \"npm run test:web\"",
    "test:server": "cd apps/server && npm run test",
    "test:web": "cd apps/web && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "tailwindcss": "^4.1.12"
  }
}
